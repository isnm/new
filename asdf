int main(int argc, char **argv)
{
 
  
  
  ros::init(argc, argv, "testAuboAPI");
  ros::NodeHandle nn;
  rn= new ROSNode(nn);



  //ros::Subscriber joy_sub = rn->n->subscribe("joy", 1000, joyCallback );   //subscribe joy
  ros::Subscriber jointState = rn->n->subscribe("/joint_states",1000, jointCallback); //subscribe jointstate
  ros::Subscriber mouse_sub = rn->n->subscribe("/spacenav/twist",1000,mouseCallback); //subscribe mouse
 // ros::ServiceClient srv_fk = n.serviceClient<moveit_msgs::GetPositionFK>("/compute_fk");
//  ros::ServiceClient srv_ik = n.serviceClient<moveit_msgs::GetPositionIK>("/compute_ik");
  


  AuboDriver robot_driver;
  bool ret = robot_driver.connectToRobotController();
  if(ret == false)
    return 0;
  


  /** If connect to a real robot, then you need initialize the dynamics parameters　**/
  aubo_robot_namespace::ROBOT_SERVICE_STATE result;
  //tool parameters
  aubo_robot_namespace::ToolDynamicsParam toolDynamicsParam;
  memset(&toolDynamicsParam, 0, sizeof(toolDynamicsParam));

  robot_driver.robot_send_service_.rootServiceRobotStartup(toolDynamicsParam/**tool dynamics paramters**/,
                                             6        /*collision class*/,
                                             true     /* Is allowed to read robot pose*/,
                                             true,    /*default */
                                             1000,    /*default */
                                             result); /*initialize*/
  robot_driver.robot_send_service_.robotServiceInitGlobalMoveProfile();
  aubo_robot_namespace::JointVelcAccParam jointMaxAcc;
  aubo_robot_namespace::JointVelcAccParam jointMaxVelc;
  for(int i = 0; i < 6; i++)
    {
        jointMaxAcc.jointPara[i] = MAX_JOINT_ACC;
        jointMaxVelc.jointPara[i] = MAX_JOINT_VEL;
    }
    robot_driver.robot_send_service_.robotServiceSetGlobalMoveJointMaxAcc(jointMaxAcc);
    robot_driver.robot_send_service_.robotServiceSetGlobalMoveJointMaxVelc(jointMaxVelc);
  ros::Rate loop_rate(100);
  while (ros::ok()){
  	  if(state == 1){
			  ROS_INFO("state 1");//move left ปุ่มอนาล็อคซ้าย ขยับซ้าย
		    geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
			  cartesian.position.x -= 0.10;  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        //ROS_INFO("moving");
      	robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
        //ROS_INFO("Moved");
		}
        
      else if(state == 2)
      { 
			  ROS_INFO("state 2");//move right ปุ่มอนาล็อคซ้าย ขยับขวา 
        geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
			  cartesian.position.x += 0.10;
			 
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        	robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 3)
      {
			  ROS_INFO("state 3"); //move up ปุ่มอนาล็อคซ้ายขยับขึ้น
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
			  cartesian.position.z += 0.10;
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 4)
      {
			  ROS_INFO("state 4"); //move down ปุ่มอนาล็อคซ้ายขยับลง 
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
			  cartesian.position.z -= 0.10;
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }	
      else if(state == 5)
      {
			  ROS_INFO("state 5"); //move backward (maybe) ปุ่มอนาล็อคขวาขยับขึ้น
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
			  cartesian.position.y -= 0.10;
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 6)
      {
			  ROS_INFO("state 6"); //move forward (maybe) ปุ่มอนาล็อคขวาขยับลง
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
			  cartesian.position.y += 0.10;
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 11)
      {
			  ROS_INFO("state 11"); //yaw (rotate z) D-pad left
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
    		tf::Quaternion qtorpy;
    		tf::quaternionMsgToTF(cartesian.orientation , qtorpy);
    		tf::Matrix3x3 m(qtorpy);
			  m.getRPY(roll, pitch, yaw);
			  yaw -= 10.0/180.0*M_PI;
			  tf::Quaternion rpytoq;
			  rpytoq.setRPY(roll,pitch,yaw);
		  	rpytoq = rpytoq.normalize();
        tf::quaternionTFToMsg(rpytoq,cartesian.orientation );
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 12)
      {
			  ROS_INFO("state 12"); //yaw (rotate z) D-pad right
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
    		tf::Quaternion qtorpy;
    		tf::quaternionMsgToTF(cartesian.orientation , qtorpy);
    		tf::Matrix3x3 m(qtorpy);
			  m.getRPY(roll, pitch, yaw);
			  yaw += 10.0/180.0*M_PI;
			  tf::Quaternion rpytoq;
			  rpytoq.setRPY(roll,pitch,yaw);
		  	rpytoq = rpytoq.normalize();
        tf::quaternionTFToMsg(rpytoq,cartesian.orientation );
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 7)
      {
			  ROS_INFO("state 7"); //roll (rotate x) right analog go right
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
    		tf::Quaternion qtorpy;
    		tf::quaternionMsgToTF(cartesian.orientation , qtorpy);
    		tf::Matrix3x3 m(qtorpy);
			  m.getRPY(roll, pitch, yaw);
			  roll += 10.0/180.0*M_PI;
			  tf::Quaternion rpytoq;
			  rpytoq.setRPY(roll,pitch,yaw);
		  	rpytoq = rpytoq.normalize();
        tf::quaternionTFToMsg(rpytoq,cartesian.orientation );
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 8)
      {
			  ROS_INFO("state 8"); //roll (rotate x) right analog go left
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
    		tf::Quaternion qtorpy;
    		tf::quaternionMsgToTF(cartesian.orientation , qtorpy);
    		tf::Matrix3x3 m(qtorpy);
			  m.getRPY(roll, pitch, yaw);
			  roll -= 10.0/180.0*M_PI;
			  tf::Quaternion rpytoq;
			  rpytoq.setRPY(roll,pitch,yaw);
		  	rpytoq = rpytoq.normalize();
        tf::quaternionTFToMsg(rpytoq,cartesian.orientation );
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 9)
      {
			  ROS_INFO("state 9"); //pitch (rotate y) ปุ่มลูกศรขึ้น
      	geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
    		tf::Quaternion qtorpy;
    		tf::quaternionMsgToTF(cartesian.orientation , qtorpy);
    		tf::Matrix3x3 m(qtorpy);
			  m.getRPY(roll, pitch, yaw);
			  pitch -= 10.0/180.0*M_PI;
			  tf::Quaternion rpytoq;
			  rpytoq.setRPY(roll,pitch,yaw);
		  	rpytoq = rpytoq.normalize();
        tf::quaternionTFToMsg(rpytoq,cartesian.orientation );
			  
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
      else if(state == 10)
      {
			  ROS_INFO("state 10"); //pitch (rotate y) ปุ่มลูกศรลง
        geometry_msgs::Pose cartesian = jsCartesian(js, rpy);
    		tf::Quaternion qtorpy;
    		tf::quaternionMsgToTF(cartesian.orientation , qtorpy);
    		tf::Matrix3x3 m(qtorpy);
			  m.getRPY(roll, pitch, yaw);
			  pitch += 10.0/180.0*M_PI;
			  tf::Quaternion rpytoq;
			  rpytoq.setRPY(roll,pitch,yaw);
		  	rpytoq = rpytoq.normalize();
        tf::quaternionTFToMsg(rpytoq,cartesian.orientation );
			  
        
      	fromik = GetIK(cartesian);		
			  for(int i=0;i<6;i++){
          ROS_INFO("%d",i+1);
				  targetjoint[i] = fromik[i];
			  }
        robot_driver.robot_send_service_.robotServiceJointMove(targetjoint, false);
      }
     else if (state == 0){
        ROS_INFO("state = 0");

        robot_driver.robot_send_service_.robotMoveFastStop();
      }


	

   
    ros::spinOnce();
    loop_rate.sleep();
  }


  return 0;
}
std::vector<double> GetIK(geometry_msgs::Pose &_ps){
	    
      moveit_msgs::GetPositionIK msg;
      ROS_INFO("call ik1");
      msg.request.ik_request.group_name = "manipulator_i5";
      ROS_INFO("call ik2");
      msg.request.ik_request.pose_stamped.pose = _ps;
      ROS_INFO("call ik3");
      msg.request.ik_request.attempts = 0;
      ROS_INFO("call ik4");
      ros::ServiceClient srv_ik = rn->n->serviceClient<moveit_msgs::GetPositionIK>("/compute_ik");
      ROS_INFO("call ik5");
      if(srv_ik.call(msg)){
          //ROS_INFO("joint from IK :%.3f,%.3f,%.3f,%.3f,%.3f,%.3f",msg.response.solution.joint_state.position[0]*180/M_PI,msg.response.solution.joint_state.position[1]*180/M_PI,msg.response.solution.joint_state.position[2]*180/M_PI,msg.response.solution.joint_state.position[3]*180/M_PI,msg.response.solution.joint_state.position[4]*180/M_PI,msg.response.solution.joint_state.position[5]*180/M_PI);
      ROS_INFO("can call ik");
      }
      else{
        ROS_ERROR("Failed to call srv ");
      }
    ROS_INFO("call ik6");
	  return msg.response.solution.joint_state.position;
  }
geometry_msgs::Pose jsCartesian(const sensor_msgs::JointState &_js, std::vector<double> &_pose){
  moveit_msgs::GetPositionFK msg;
  msg.request.header.stamp = ros::Time::now();
  msg.request.fk_link_names = {"wrist3_Link"};
  msg.request.robot_state.joint_state = _js;
  ros::ServiceClient srv_fk = rn->n->serviceClient<moveit_msgs::GetPositionFK>("/compute_fk");
  ROS_INFO("calling fk");
  if(srv_fk.call(msg)){
    ROS_INFO("call fk1");
     
    _pose[0] = msg.response.pose_stamped[0].pose.position.x;
    ROS_INFO("call fk2");
    _pose[1] = msg.response.pose_stamped[0].pose.position.y;
    ROS_INFO("call fk3");
    _pose[2] = msg.response.pose_stamped[0].pose.position.z; 
    ROS_INFO("call fk4");
    tf::Quaternion q_ori;
    ROS_INFO("call fk5");
    tf::quaternionMsgToTF(msg.response.pose_stamped[0].pose.orientation , q_ori);
    ROS_INFO("call fk6");
    tf::Matrix3x3 m(q_ori);
    ROS_INFO("call fk7");
    double r, p, y;
    ROS_INFO("call fk8");
    m.getRPY(r, p, y);
    ROS_INFO("call fk9");
    _pose[3] = r;
    ROS_INFO("call fk10");
    _pose[4] = p;
    ROS_INFO("call fk11");
    _pose[5] = y;
    ROS_INFO("call fk12");
    
    //msg.response.pose_stamped[0].pose.orientation = q_rpy;
    //ROS_INFO("position from fK XYZ:%.3f,%.3f,%.3f RPY :%.3f,%.3f,%.3f",_pose[0],_pose[1],_pose[2],_pose[3]*180/M_PI,_pose[4]*180/M_PI,_pose[5]*180/M_PI);
  }
  else{
    ROS_ERROR("Failed to call srv");

  }
  ROS_INFO("call fk13");
  return msg.response.pose_stamped[0].pose;
}
